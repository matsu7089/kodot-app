---
import type { HTMLAttributes } from 'astro/types'

export type Props = HTMLAttributes<'div'>

const { class: classNames, ...attrs } = Astro.props
---

<div
  class:list={['pixel-border bg-white dark:bg-gh-dimmed-bg', classNames]}
  {...attrs}
>
  <slot />
</div>

<style>
  .pixel-border {
    border-width: 4px;
    border-image: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='6' height='6'><path d='m2,0h2v2h2v2h-2v2h-2v-2h-2v-2h2z' fill='rgb(255,255,255)' /></svg>")
      2;
    background-clip: padding-box;
  }

  :global(.dark) .pixel-border {
    border-image-source: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' width='6' height='6'><path d='m2,0h2v2h2v2h-2v2h-2v-2h-2v-2h2z' fill='rgb(34,39,46)' /></svg>");
  }
</style>
