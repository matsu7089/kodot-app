---
import { Icon } from 'astro-icon'
import type { HTMLAttributes } from 'astro/types'
import { type PrimaryColor, primaryTextClass } from '@/siteConfig'

export type Props = HTMLAttributes<'span'> & {
  name: string
  alt?: string
  primaryColor?: PrimaryColor
  isLargeIcon?: boolean
}

const {
  name,
  alt,
  primaryColor,
  class: classNames,
  isLargeIcon,
  ...attrs
} = Astro.props
---

<span class:list={['flex items-center', classNames]} {...attrs}>
  <Icon
    name={name}
    class:list={[
      isLargeIcon ? 'h-8 w-8 mr-2' : 'h-4 w-4 mr-1',
      primaryColor && primaryTextClass[primaryColor],
    ]}
    alt={alt}
  />
  <span><slot /></span>
</span>
