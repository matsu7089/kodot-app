---
import { Icon } from 'astro-icon'
import type { HTMLAttributes } from 'astro/types'
import { type PrimaryColor, primaryTextClass } from '@/siteConfig'

export type Props = HTMLAttributes<'span'> & {
  name: string
  alt?: string
  primaryColor: PrimaryColor
}

const { name, alt, primaryColor, class: classNames, ...attrs } = Astro.props
---

<span class:list={['flex items-center', classNames]} {...attrs}>
  <Icon
    name={name}
    class:list={['h-4 w-4 mr-1', primaryTextClass[primaryColor]]}
    alt={alt}
  />
  <span><slot /></span>
</span>
