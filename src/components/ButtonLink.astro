---
import type { HTMLAttributes } from 'astro/types'
import PixelContainer from '@/components/PixelContainer.astro'
import { type PrimaryColor, primaryTextClass } from '@/siteConfig'

export type Props = HTMLAttributes<'a'> & {
  primaryColor: PrimaryColor
}

const { primaryColor, class: classNames, ...attrs } = Astro.props

const disabled = attrs.href == null
---

<a class={classNames} {...attrs}>
  <PixelContainer
    class:list={[
      'inline-block font-ps2 px-4 py-3 text-xs',
      primaryTextClass[primaryColor],
      { 'hover:-translate-x-0.5 hover:-translate-y-0.5': !disabled },
      { 'opacity-50': disabled },
    ]}
  >
    <slot />
  </PixelContainer>
</a>
