---
import ListLayout from '@/layouts/ListLayout.astro'
import {
  getFirstPage,
  getPubCollection,
  getTags,
  orderByPubDateDesc,
} from '@/utils'

const entries = (await getPubCollection('notes')).sort(orderByPubDateDesc)
const page = await getFirstPage(Astro.url.pathname, entries)
const tags = await getTags('notes')
---

<ListLayout
  primaryColor="green"
  title="Notes"
  icon="book-green"
  page={page}
  tags={tags}
/>
