---
import ListLayout from '@/layouts/ListLayout.astro'
import {
  customPaginatePaths,
  getPubCollection,
  orderByPubDateDesc,
} from '@/utils'

const entries = (await getPubCollection('articles')).sort(orderByPubDateDesc)
export const getStaticPaths = customPaginatePaths(entries)

const { page } = Astro.props
---

<ListLayout primaryColor="blue" title="Articles" icon="book-blue" page={page} />
