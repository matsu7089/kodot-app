---
import { getCollection } from 'astro:content'
import MarkdownLayout from '@/layouts/MarkdownLayout.astro'

export const getStaticPaths = async () => {
  const articleEntries = await getCollection('articles', ({ data }) =>
    import.meta.env.PROD ? !data.isDraft : true,
  )

  return articleEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }))
}

const { Content, headings, remarkPluginFrontmatter } =
  await Astro.props.entry.render()
---

<MarkdownLayout
  primaryColor="blue"
  headings={headings}
  frontmatter={remarkPluginFrontmatter}
>
  <Content />
</MarkdownLayout>
